<%- include('../partials/header'); %>

<section
    class="vh-100 bg-image"
    style="
        background-image: url('https://media.istockphoto.com/photos/cute-children-or-baby-card-white-clouds-on-the-light-blue-wooden-picture-id1090975842?k=20&m=1090975842&s=612x612&w=0&h=4Ko6v1TJSVqo343f7pPKgU7-bAadGpwHfTTTw7Nokaw=');
    "
>
    <div class="d-flex align-items-center">
        <div class="container">
            <div
                class="row d-flex justify-content-center align-items-center mt-5"
            >
                <div class="col-12 col-md-9 col-lg-7 col-xl-6 signup-card">
                    <div class="card" style="border-radius: 15px">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-4">
                                Sign Me Up
                            </h2>

                            <form
                                id="signup-form"
                                method="POST"
                                action="/signup"
                            >
                                <div class="form-outline mb-4" id="username">
                                    <label class="form-label" for="username"
                                        >Your Username</label
                                    >
                                    <input
                                        type="text"
                                        class="form-control form-control-lg"
                                        name="username"
                                        required
                                    />
                                    <p>Between 3 - 13 characters</p>
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label" for="email"
                                        >Your Email</label
                                    >
                                    <input
                                        type="email"
                                        class="form-control form-control-lg"
                                        name="email"
                                        required
                                    />
                                </div>

                                <div class="form-outline mb-4" id="password">
                                    <label class="form-label" for="password"
                                        >Password</label
                                    >
                                    <input
                                        type="password"
                                        class="form-control form-control-lg"
                                        name="password"
                                        required
                                    />
                                    <p>Minimum 3 characters</p>
                                </div>

                                <div class="form-outline mb-4">
                                    <label
                                        class="form-label"
                                        for="confirm_password"
                                        >Confirm your password</label
                                    >
                                    <input
                                        type="password"
                                        class="form-control form-control-lg"
                                        name="confirm_password"
                                        required
                                    />
                                </div>

                                <div class="d-flex justify-content-center">
                                    <button
                                        type="submit"
                                        class="btn btn-outline-success signup-btn"
                                    >
                                        Sign Up
                                    </button>
                                    <a
                                        href="/"
                                        style="text-decoration: none"
                                        rel="noopener noreferrer"
                                        ><button
                                            type="button"
                                            class="btn btn-outline-success signup-cancel-btn"
                                        >
                                            Cancel
                                        </button></a
                                    >
                                </div>

                                <p class="text-center text-muted mt-4 mb-0">
                                    Have already an account?
                                    <a
                                        href="/login"
                                        class="fw-bold text-body"
                                        rel="noopener noreferrer"
                                        ><u>Login here</u></a
                                    >
                                </p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
